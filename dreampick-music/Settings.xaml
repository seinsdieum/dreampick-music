<Page x:Class="dreampick_music.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:dreampick_music"
      mc:Ignorable="d"
      Title="Settings" >
        <StackPanel>
            <Label Margin="0,0,0,10" Style="{DynamicResource H1}">Настройки</Label>
            <local:Container Margin="0,0,0,10" Title="Цвет темы">
                <StackPanel>
                    <RadioButton>Стандартный</RadioButton>
                    <RadioButton>Зеленый</RadioButton>
                    <RadioButton>Фиолетовый</RadioButton>
                    <RadioButton>Синий</RadioButton>
                </StackPanel>
            </local:Container>
            <local:Container Title="Тип тайтл-бара">
                <StackPanel>
                    <RadioButton>Обычный</RadioButton>
                    <RadioButton>Обновленный</RadioButton>
                </StackPanel>
            </local:Container>
        </StackPanel>
</Page>
