<UserControl x:Class="dreampick_music.SingleChoiceGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:dreampick_music"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="ChoiceGroup"
             >
    <ItemsControl Name="ToggleItems" ItemsSource="{Binding ChoiceList}">
        <ItemsControl.ItemTemplate>
            <DataTemplate >
                <ToggleButton Name="Toggle" Click="ToggleButton_OnChecked" Style="{DynamicResource ForeButton}" Content="{ Binding Name}" ></ToggleButton>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
