<Window x:Class="dreampick_music.SelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:dreampick_music"
        mc:Ignorable="d"
        Title="SelectionDialog"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="Icon.ico"
        Background="Transparent"
        Width="500"
        Height="600"
        >
    <Border Padding="20" Background="{DynamicResource BackBrush}" CornerRadius="{DynamicResource Radius}">
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Frame VerticalAlignment="Stretch" Margin="0,0,0,10" Name="SelectionFrame">
        
            </Frame>
            <Button Grid.Row="1" HorizontalAlignment="Left" Click="ButtonBase_OnClick">
                <Label Content="{DynamicResource LReturn}"></Label>
            </Button>
        </Grid>
            
    </Border>
</Window>
