<UserControl x:Class="dreampick_music.Container"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:dreampick_music"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Template>
        <ControlTemplate>
            <Border Padding="{DynamicResource Padding}" Background="{DynamicResource SecondBrush}" x:Name="Border" CornerRadius="{DynamicResource Radius}" >
                <StackPanel >
                    <Label Margin="0,0,0, 10" Content="{Binding Title}"></Label>
                    <ContentPresenter Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"></ContentPresenter>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
